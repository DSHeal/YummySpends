<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YummySpends" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_363A94</item>
        <item name="colorPrimaryVariant">@color/c_363A94</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="buttonStyle">@style/RegularButton</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/design_default_color_background</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/c_E5E6F2</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="RegularButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/bcg_reg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@color/c_B2B4E8</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>