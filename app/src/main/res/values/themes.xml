<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YummySpends" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_363A94</item>
        <item name="colorPrimaryVariant">@color/c_363A94</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="bottomNavigationStyle">@style/bottomViewStyle</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/c_9BC9A2</item>
        <item name="colorSecondaryVariant">#018717</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonStyle">@style/SubtleButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottomViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/c_9BC9A2</item>
        <item name="colorPrimary">?attr/colorSecondaryVariant</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/c_E5E6F2</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="RegularButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bcg_reg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubtleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <!--        <item name="android:background">@drawable/bcg_subtle_button</item>-->
        <item name="android:backgroundTint">@color/c_E5E6F2</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MediumButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/c_FF5C5E9F</item>
        <item name="android:textSize">10sp</item>

        <item name="android:textColor">@color/c_E5E6F2</item>
    </style>

    <style name="Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@color/c_B2B4E8</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HistoryTableHeader" parent="TableHeader">
        <item name="android:background">@drawable/bcg_coffee_light_not_rounded</item>
    </style>

    <style name="HistoryTableRowItem" parent="TableRowItem">
        <item name="android:background">@drawable/bcg_outlined_light_grey_not_rounded</item>
    </style>

    <style name="TableRowItem" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bcg_outlined_light_grey_rounded_8</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">1dp</item>
    </style>

    <style name="TableHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bcg_rounded_8_coffee_light</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>
</resources>