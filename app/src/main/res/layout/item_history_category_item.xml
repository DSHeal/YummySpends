<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="1dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_history_item_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_history_category_item_name"
        style="@style/HistoryTableRowItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        tools:hint="Огурец"
        android:padding="3dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_history_item_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_history_category_item_price"
        style="@style/HistoryTableRowItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        tools:hint="234"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_history_item_center"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>